<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lupa_password_Activity"
    android:background="@color/bg_latar"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="281dp"
            android:layout_height="187dp"
            app:srcCompat="@drawable/orang_lupa_password"
            android:layout_marginTop="148dp"
            android:layout_marginLeft="62dp"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Lupa Password?"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:text="Jangan khawatir! masukan email kamu
dan kami akan mengirimkan kode verifikasi"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextTextPersonName6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_putih"
                android:padding="16dp"
                android:inputType="textPersonName"
                android:hint="Alamat E-mail"
                android:textSize="12dp"
                android:layout_marginTop="31dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/btn_blue"
                android:layout_marginTop="62dp">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kirim Email"
                    android:layout_marginLeft="125dp"
                    android:layout_marginRight="100dp"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/putih"
                    android:padding="11dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>