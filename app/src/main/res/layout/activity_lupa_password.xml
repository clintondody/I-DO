<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5ECFF">

    <ImageView
        android:id="@+id/imageLupaPassword"
        android:layout_width="282dp"
        android:layout_height="188dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="148dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="510dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/orang_lupa_password" />

    <TextView
        android:id="@+id/textLupaPassword"
        android:layout_width="206dp"
        android:layout_height="72dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="366dp"
        android:layout_marginRight="164dp"
        android:layout_marginBottom="408dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Lupa
                      Password?"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Deskripsi"
        android:layout_width="302dp"
        android:layout_height="36dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="444dp"
        android:layout_marginRight="68dp"
        android:layout_marginBottom="366dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Jangan khawatir! masukan email kamu
                      dan kami akan mengirimkan kode verifikasi"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnEmail"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="510dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="282dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653"
        app:srcCompat="@drawable/bg_buttom_putih" />

    <TextView
        android:id="@+id/EmailLupaPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="256dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/poppinsregular"
        android:hint="Alamat E-mail"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnEmail"
        app:layout_constraintEnd_toEndOf="@+id/btnEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnEmail"
        app:layout_constraintTop_toTopOf="@+id/btnEmail" />

    <ImageView
        android:id="@+id/Kirim"
        android:layout_width="358dp"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="626dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="166dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_blue" />

    <TextView
        android:id="@+id/textKirim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Kirim Email"
        android:textColor="@color/putih"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/Kirim"
        app:layout_constraintEnd_toEndOf="@+id/Kirim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Kirim"
        app:layout_constraintTop_toTopOf="@+id/Kirim" />

</androidx.constraintlayout.widget.ConstraintLayout>